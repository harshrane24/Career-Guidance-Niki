<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@android:color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Personal Information -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Information"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/purple_200"
            />

        <EditText
            android:id="@+id/editFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name" />

        <EditText
            android:id="@+id/editContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact Number" />

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email" />

        <!-- Objective -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Objective"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editObjective"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your career objective..." />

        <!-- Education -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Education"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editDegree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Degree" />

        <EditText
            android:id="@+id/editInstitution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Institution" />

        <EditText
            android:id="@+id/editYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Year of Graduation" />

        <!-- Work Experience -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Work Experience"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editJobTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Job Title" />

        <EditText
            android:id="@+id/editCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Company Name" />

        <EditText
            android:id="@+id/editDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Duration (e.g., Jan 2020 - Dec 2023)" />

        <EditText
            android:id="@+id/editResponsibilities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Responsibilities" />

        <!-- Skills -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skills"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editSkills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="List your skills (comma-separated)" />

        <!-- Certifications -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Certifications"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editCertifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Certifications" />

        <!-- Projects -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Projects"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editProjects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Projects" />

        <!-- Download Button -->
        <Button
            android:id="@+id/btnDownloadResume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Download Resume"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</ScrollView>
